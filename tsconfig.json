{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "target": "es2017",
        "sourceMap": true,
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true
    },
    "include": ["/**/*.ts", "/**/*.spec.ts"],
    "exclude": ["./playground"]
}
